.channle-bg {
	width: 100%;
	height: 300rpx;
}
.channel-list {
	margin-top: 40rpx;
	border-bottom: 1px solid #e4e4e4; 
}
.channel {
	display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border-top: 1px solid #e4e4e4;
}
.channel .icon {
  width: 50rpx;
  height: 50rpx;
  margin: 19rpx 30rpx;
}
.channel-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-family: 'Microsoft Yahei'
}
.channel-detail text {
	height: 44rpx;
	line-height: 44rpx;
  font-size: 26rpx;
  color: #d1d1d1;
}
.channel-detail .channel-name {
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}