.page-hd {
    display: flex;
    width: 100%;
    height: 210rpx;
    background: #349ade;
}
.page-hd .avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 30rpx;
}
.account-info {
	display: flex;
	flex-direction: column;
	padding-top: 30rpx;
	color: #fff;
}
.account-info text {
	margin-top: 20rpx;
	font-size: 32rpx;
}
.account-link {
	border-bottom: 1px solid #e4e4e4;
}
.account-link navigator {
	display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  border-top: 1px solid #e4e4e4;
	background: #fff;
}
.account-link .records {
	margin: 30rpx 0;
	border-bottom: 1px solid #e4e4e4;
}
.account-link image {
	width: 36rpx;
  height: 36rpx;
  margin-top: 26rpx;
}
.account-link .icon-right{
	width: 18rpx;
  height: 30rpx;
  margin-top: 29rpx;
}
.account-link navigator text {
	flex: 1;
	margin-left: 20rpx;
	color: #666;
}
.account-link .version {
  color: #d1d1d1;
}