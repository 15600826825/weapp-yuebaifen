.page {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  height: 100%;
  padding: 30rpx;
  color: #fff;
  overflow: hidden;
  background-image: url(http://www.yueshijue.com/wechat/signinbg.png);
  background-size: cover;
}
.page-bd {
	padding-top: 80rpx;
}
.form-item {
	margin-bottom: 40rpx;
	border-bottom: 1px solid #d9d9d9;
}
.form-item-icon {
	float: left;
	width: 40rpx;
	height: 40rpx;
	margin-left: 10rpx;
}
.form-item-input {
	display: inline-block;
	margin-left: 40rpx;
}
.form-item icon {
	float: right;
}
.submit-button {
	padding-top: 60rpx;
}
.signup-link {
	position: absolute;
	right: 20rpx;
	padding: 10rpx;
}
.logo {
	width: 320rpx;
	height: 320rpx;
}
.page-fd {
	position: absolute;
	bottom: 30rpx;
	width: 100%;
}
.form-link {
	width: 214px;
	margin: auto;
  font-size: 14px;
}
.form-link navigator {
	display: inline-block;
}
button[type="primary"] {
    color: #00b4e7;
    background: #fff;
}

button:hover[type="primary"] {
    color: #00b4e7;
    background: #f9f9f9;
}