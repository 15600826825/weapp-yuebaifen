/* pages/index/index.wxss */
.page {
	display: flex;
	width: 100%;
	height: 100%;
}
.page-main {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	background: url(http://www.yueshijue.com/wechat/indexbg.png) no-repeat;
	background-size: cover;
}
.user {
	width: 36rpx;
  height: 38rpx;
	margin: 20rpx;
}
.logo {
	width: 300rpx;
	height: 100rpx;
}
.page-bd {
	flex: 1;
	padding-top: 20%;
	text-align: center;
	color: #fff;
}
.text {
	margin: 20rpx;
	font-size: 28rpx;
}
.text text {
	padding: 0 10rpx;
	letter-spacing: 10rpx;
}
.page-ft {
	align-self: flex-end;
	width: 100%;
	text-align: center;
	color: #fff;
	background: #00b4ea;
}
.scan-box {
	height: 88rpx;
	line-height: 88rpx;
}
.scan-icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 16rpx;
}
