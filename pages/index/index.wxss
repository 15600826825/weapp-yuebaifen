/* pages/index/index.wxss */
.page {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 100%;
	position: absolute;
	transition: left .25s linear;
}
.aside {
	position: absolute;
	left: -550rpx;
	display: block;
	width: 550rpx;
	height: 100%;
	padding: 40rpx;
	background: #fff
}
.user-info {
	margin-bottom: 60rpx;
	padding: 30rpx;
	text-align: center;
	border-bottom: 1px solid #ccc;
}
.user-info image {
	display: block;
	width: 160rpx;
	height: 160rpx;
	margin: 0 auto 30rpx;
}
.user-link view {
	margin: 30rpx 0;
}
.user-link image {
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle
}
.user-link text {
	margin-left: 30rpx;
	vertical-align: middle;
	color: #666;
}
.page-main {
	display: flex;
	flex-direction: column;
	position: absolute;
	left: 0;
	width: 100%;
	height: 100%;
	background: url(http://www.yueshijue.com/wechat/indexbg.png) no-repeat;
	background-size: cover;
}
.user {
	width: 36rpx;
  height: 38rpx;
	margin: 20rpx;
}
.logo {
	width: 300rpx;
	height: 100rpx;
}
.page-bd {
	flex: 1;
	padding-top: 20%;
	text-align: center;
	color: #fff;
}
.text-info {
	margin: 20rpx;
}
.text-info text {
	padding: 0 10rpx;
	letter-spacing: 10rpx;
}
.page-ft {
	align-self: flex-end;
	width: 100%;
	text-align: center;
	color: #fff;
	background: #00b4ea;
}
.scan-box {
	height: 80rpx;
	line-height: 80rpx;
}
.scan-box text {
	font-size: 32rpx;
}
.scan-icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 10rpx;
}
