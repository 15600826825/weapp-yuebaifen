.page {
    padding: 40rpx;
}
.no-records {
    margin-top: 30rpx;
    text-align: center;
}
.record-time image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 20rpx;
}
.record-detail {
    padding: 4rpx 0 4rpx 26rpx;
    margin-left: 8rpx;
    border-left: 1px solid #888;
}
.record-card {
    border: 1px solid #ccc;
    box-shadow: 0 1px 5px #ddd
}
.card-header {
    display: flex;
    justify-content: space-between;
    padding: 6rpx 20rpx;
    color: #fff;
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#00B4EA), to(#0095DB));
}
.card-header .record-status {
    font-size: 24rpx;
}
.card-body {
    display: flex;
    padding: 6rpx 20rpx;
    background: #fff;
}
.card-body view {
    flex: 1;
    display: flex;
    flex-direction: column;
}
.card-body view .text {
    color: #a1a1a1;
}
.modal {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 99;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
}
.modal-dialog {
    position: absolute;
    top: 15%;
    left: calc((100% - 540rpx) / 2);
    width: 540rpx;
    border-radius: 10rpx;
    background: #fff
}
.modal-body {
    padding: 30rpx;
    text-align: center;
}
.modal-title text {
    font-size: 32rpx;
}
.modal-body input {
    width: 70%;
    margin: 40rpx auto 0;
    border: 1px solid #ccc;
}
.modal-footer {
    display: flex;
    width: 100%;
    padding: 0 10rpx;
    border-radius: 0 0 10rpx 10rpx;
    border-top: 1px solid #ccc;
}
.modal-footer button {
    flex: 1;
    border-radius: 0;
    background: #fff
}
.modal-footer button::after {
    width: 0;
    height: 0;
}
.modal-footer .submit {
    color: #469850;
    border-left: 1px solid #ccc;
}
